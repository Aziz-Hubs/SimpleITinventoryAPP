# API Configuration
# Set to 'true' to use mock data instead of calling the backend API
NEXT_PUBLIC_USE_MOCK_DATA=true

# API URL (only used when NEXT_PUBLIC_USE_MOCK_DATA=false)
NEXT_PUBLIC_API_URL=http://localhost:5000

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# Enable API logging in development
NEXT_PUBLIC_ENABLE_API_LOGGING=false
